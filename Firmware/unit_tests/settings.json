{
    "directories": {
        "ut_dir": ".",
        "object_dir": "objects",
        "source_dir": "../Src",
        "mock_dir": "mocks",
        "lib_dir": "/usr/lib"
    },

    "ninja_variables": {
        "compiler": "g++",
        "compiler_flags": "-c -Wall -fprofile-arcs -ftest-coverage -fdiagnostics-color=always",
        "linker": "g++",
        "linker_flags": "-fprofile-arcs -ftest-coverage -fdiagnostics-color=always -L ${lib_dir} -l gtest -l pthread -l gmock"
    },

    "include_directories": [
        "${mock_dir}",
        "${source_dir}",
        "${source_dir}/configs",
        "${ut_dir}/../submodules/etl/include",
        "/usr/src/googletest/googletest/include",
        "$${GTEST_DIR}/include",
        "/usr/src/googletest/googlemock/include"
    ]
}
