{
    "directories": {
        "ut_dir": ".",
        "object_dir": "objects",
        "source_dir": "../Src",
        "mock_dir": "mocks",
        "lib_dir": "/usr/lib"
    },

    "ninja_variables": {
        "coverage_flag": "--coverage",
        "color_flag": "-fdiagnostics-color=always",

        "compiler": "g++",
        "compiler_flags": "-c -Wall ${color_flag}",
        "linker": "g++",
        "linker_flags": "${coverage_flag} ${color_flag} -L ${lib_dir} -l gtest -l pthread -l gmock"
    },

    "include_directories": [
        "${mock_dir}",
        "${source_dir}",
        "${source_dir}/configs",
        "${ut_dir}/../submodules/etl/include",
        "/usr/src/googletest/googletest/include",
        "/usr/src/googletest/googlemock/include"
    ]
}
